server {
    listen 80;
    server_name {{ ansible_fqdn }};  # to use the fully qualified domain name of the target host

    root /var/www/html;
    index index.html;

    # Custom 404 error page
    error_page 404 /404.html;
    location = /404.html {
        root /var/www/html;
    }

    # Serve the static content
    location / {
        try_files $uri $uri/ =404;
    }
}

